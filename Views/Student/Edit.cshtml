@model tuesdaycrud.Models.Student
@{
    ViewData["Title"] = "Edit";
}

<h2>Create</h2>

<form asp-controller="Student" asp-action="Edit" method="post">
    <div class="form-group">
        <div class="col-md-4">
            <label asp-for="roll_no">Roll no.:</label>
            <input asp-for="roll_no" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <label asp-for="stu_name">Name:</label>
            <input asp-for="stu_name" class="form-control" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label asp-for="stu_address">Address:</label>
            <input asp-for="stu_address" class="form-control" />
        </div>
    </div>
    <div class="col-md-3 mt-3">
        <input type="submit" value="save" class="btn btn-primary" />
    </div>
</form>




